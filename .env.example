# ============================================================
# MediaAgentIQ Configuration
# Copy this file to .env and fill in your values
# ============================================================

# ==================== Mode Toggle ====================
# Set to true for production (real APIs), false for demo (mock data)
PRODUCTION_MODE=false

# ==================== OpenAI Configuration ====================
# Required for production mode transcription (Whisper) and analysis (GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_WHISPER_MODEL=whisper-1

# ==================== ElevenLabs Configuration ====================
# Required for voice dubbing in Localization Agent
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ==================== Avid Media Central ====================
# CTMS (Connectivity Toolkit Media Services) configuration
# Contact your Avid administrator for these values
AVID_HOST=https://your-avid-mediacentral-host.com
AVID_USERNAME=your-username
AVID_PASSWORD=your-password
AVID_WORKSPACE=default
# Set to false to connect to real Avid (requires valid credentials above)
AVID_MOCK_MODE=true

# ==================== Grass Valley / NMOS ====================
# NMOS IS-04/IS-05 Registry for GV Orbit integration
NMOS_REGISTRY_URL=http://your-gv-orbit-host:8010
NMOS_NODE_ID=
NMOS_ENABLED=false

# ==================== Database ====================
DATABASE_URL=sqlite+aiosqlite:///mediaagentiq.db

# ==================== Server Configuration ====================
HOST=127.0.0.1
PORT=8000
DEBUG=true

# ==================== File Settings ====================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_VIDEO_EXTENSIONS=.mp4,.mov,.avi,.mkv,.webm
ALLOWED_AUDIO_EXTENSIONS=.mp3,.wav,.m4a,.aac

# ==================== Agent Settings ====================
CAPTION_CONFIDENCE_THRESHOLD=0.85
CLIP_MIN_DURATION=15
CLIP_MAX_DURATION=60

# ==================== API Timeouts ====================
API_TIMEOUT_SECONDS=30
TRANSCRIPTION_TIMEOUT_SECONDS=300
